---
import TopLevel from '../components/TopLevel.astro';

const items = [0, 1, 2];
---

<html>
  <head>
    <!-- Head Stuff -->
  </head>
  <body>
    <main>
      <TopLevel />
      {items.map(item => (
        <div id={`a${item}`} />
        <div id={`b${item}`} />
        <div id={`c${item}`} />
      ))}
      {items.map(item => {
        return (
          <div id={`x${item}`} />
          <div id={`y${item}`} />
          <div id={`z${item}`} />
        )
      })}
      {items.map(function (item) {
        return (
          <div id={`a${item}`} />
          <div id={`b${item}`} />
          <div id={`c${item}`} />
        )
      })}
      {items.length === 1 ? (
        <div id={`ternary-a`} />
        <div id={`ternary-b`} />
        <div id={`ternary-c`} />
      ) : (
        <div id={`ternary-x`} />
        <div id={`ternary-y`} />
        <div id={`ternary-z`} />
      )}
    </main>
  </body>
</html>
